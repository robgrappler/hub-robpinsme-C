---
// DIRTY HUB - Spanish Version
import BaseLayout from "../../layouts/BaseLayout.astro";
import BentoCard from "../../components/BentoCard.astro";
import TileLink from "../../components/TileLink.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { featuredMatch } from "../../data/featured-match";
import LanguagePicker from "../../components/LanguagePicker.astro";
import { ui, useTranslations } from "../../i18n/ui";

const lang = "es";
const t = useTranslations(lang);

// Fetch all links and sort by 'order', filtering for 'es'
const links = (await getCollection("links"))
    .filter((entry) => entry.slug.startsWith("es/"))
    .sort(
        (a: CollectionEntry<"links">, b: CollectionEntry<"links">) =>
            a.data.order - b.data.order,
    );

// Dynamic Featured Match logic
const allMatches = await getCollection("matches");
const latestDbFeatured = allMatches
    .filter((m) => m.data.featured)
    .sort((a, b) => {
        const dateA = new Date(a.data.uploadDate || 0).getTime();
        const dateB = new Date(b.data.uploadDate || 0).getTime();
        return dateB - dateA;
    })[0];

// Merge DB match data into the featuredMatch shape if exists
// Note: We use the English title/desc for the featured match as the user said
// "only of the main cards... just the titles and descriptions of those main cards"
// The featured match is a specific content piece, usually same title.
// If needed we could use titleEs/descEs if they exist in schema, but for now we follow the pattern.
const activeFeatured = latestDbFeatured
    ? {
          ...featuredMatch,
          title: latestDbFeatured.data.titleEs || latestDbFeatured.data.titleEn,
          subtitle:
              latestDbFeatured.data.descEs || latestDbFeatured.data.descEn,
          href:
              latestDbFeatured.data.href ||
              `/database/${latestDbFeatured.slug}`,
          duration: latestDbFeatured.data.duration,
          thumb: latestDbFeatured.data.thumb,
          tag: latestDbFeatured.data.badge?.es || "Destacado",
      }
    : {
          ...featuredMatch,
          tag: "Destacado", // Fallback if using default static match
      };
---

<BaseLayout title="Robgrappler's | Digital Garden">
    <div class="mx-auto min-h-screen max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <header class="mb-12 flex flex-col gap-2">
            <span
                class="font-sans text-xs font-bold uppercase tracking-[0.2em] text-sub-grey"
            >
                Digital Matroom v2.0
            </span>
            <div class="flex items-start justify-between">
                <h1
                    class="font-b612 text-5xl font-black tracking-tight text-white sm:text-7xl"
                >
                    {t("hero.title")}
                </h1>
                <LanguagePicker currentLang="es" />
            </div>
            <p class="max-w-xl font-sans text-lg text-sub-paper/80">
                {t("hero.subtitle")}
            </p>
        </header>

        <main
            class="grid grid-cols-2 gap-3 md:grid-cols-3 md:auto-rows-[190px] md:gap-4 lg:auto-rows-[210px]"
        >
            <!-- BIRTHDAY BANNER (Spanish) -->
            <a
                href="/es/support"
                class="spotlight-card col-span-2 flex items-center justify-between rounded-2xl border border-main-gold/60 bg-gradient-to-br from-main-surface to-[#5a2e63] px-8 py-6 text-white shadow-2xl shadow-main-gold/5 motion-safe:duration-300 motion-safe:hover:scale-[1.01] hover:border-main-gold hover:shadow-main-gold/10 md:col-span-3 group relative overflow-hidden"
            >
                <div
                    class="relative z-10 flex w-full items-center justify-between"
                >
                    <span class="font-bebas text-3xl text-white sm:text-5xl"
                        >36 hoy: Un año más, seguimos.</span
                    >
                    <div class="flex items-center gap-2 text-[#F5C265]">
                        <span
                            class="font-sans text-sm font-bold uppercase tracking-wider"
                            >Apoya al creador</span
                        >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </div>
                </div>

                <!-- Gold Spotlight Gradient -->
                <div
                    class="pointer-events-none absolute -inset-px opacity-0 motion-safe:transition-opacity motion-safe:duration-300 group-hover:opacity-100"
                    style="background: radial-gradient(600px circle at var(--x) var(--y), rgba(245, 194, 101, 0.15), transparent 40%);"
                >
                </div>
            </a>

            <!-- FEATURED MATCH CARD -->
            <TileLink
                href={activeFeatured.href}
                class="col-span-2 h-full rounded-3xl bg-[#1a1a1a] motion-safe:duration-300 motion-safe:hover:scale-[1.01] hover:shadow-[#F5C265]/10 md:col-span-2 md:row-span-2"
                aria-label={`Watch featured match: ${activeFeatured.title}`}
                tilt
            >
                <!-- Background Image/Gradient -->
                <div class="absolute inset-0 z-0">
                    <img
                        src={activeFeatured.thumb}
                        data-thumbs={JSON.stringify(
                            activeFeatured.thumbs || [],
                        )}
                        alt=""
                        class="featured-thumb h-full w-full object-cover opacity-95 motion-safe:transition-transform motion-safe:duration-700 motion-safe:group-hover:scale-105 group-hover:opacity-80"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"
                    >
                    </div>
                </div>

                <!-- Content Content -->
                <div class="relative z-10 flex h-full flex-col justify-between">
                    <!-- Button positioned absolutely to bottom right -->
                    <span
                        class="absolute bottom-6 right-6 z-20 w-fit rounded-lg bg-[#F5C265] px-5 py-2.5 font-sans text-xs font-black uppercase tracking-widest text-[#0b0b0e] motion-safe:transition-all hover:bg-white hover:text-black hover:shadow-[0_0_20px_rgba(245,194,101,0.4)] motion-safe:hover:scale-105 group-focus-visible:ring-2 group-focus-visible:ring-main-gold/70 group-focus-visible:ring-offset-2 group-focus-visible:ring-offset-main-bg"
                    >
                        Ver Ahora ↗
                    </span>
                    <div class="flex items-start justify-between">
                        <span
                            class="inline-block rounded-full border border-[#F5C265]/30 bg-[#F5C265]/10 px-3 py-1 text-[10px] font-bold uppercase tracking-wider text-[#F5C265] backdrop-blur-md"
                        >
                            {activeFeatured.tag}
                        </span>
                    </div>

                    <div class="space-y-4">
                        <div>
                            <h2
                                class="hidden md:block font-bebas text-4xl leading-none text-white transition-colors group-hover:text-[#F5C265] sm:text-5xl md:text-6xl"
                            >
                                {activeFeatured.title}
                            </h2>
                            <p
                                class="mt-2 font-sans text-sm font-medium text-gray-300"
                            >
                                {activeFeatured.subtitle}
                            </p>
                        </div>

                        <div
                            class="flex items-center gap-4 text-xs font-bold text-gray-400"
                        >
                            <div class="flex items-center gap-1.5">
                                <svg
                                    class="h-4 w-4 text-[#F5C265]"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path>
                                </svg>
                                <span>{activeFeatured.duration}</span>
                            </div>
                            <span class="text-gray-600">•</span>
                            <div class="flex items-center gap-1.5">
                                <svg
                                    class="h-4 w-4 text-[#F5C265]"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path>
                                </svg>
                                <span>{activeFeatured.price}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </TileLink>

            {links.map((link) => <BentoCard link={link} />)}
        </main>

        <footer
            class="mt-20 border-t border-main-surface pt-8 text-center sm:text-left"
        >
            <p
                class="font-sans text-xs text-sub-grey uppercase tracking-widest"
            >
                © {new Date().getFullYear()} Robgrappler. Todos los derechos reservados.
            </p>
        </footer>
    </div>
</BaseLayout>

<style>
    @keyframes fade-in-up {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) both;
    }
</style>

<script>
    function initRandomThumb() {
        const img = document.querySelector(
            ".featured-thumb",
        ) as HTMLImageElement;
        if (!img) return;

        const dataThumbs = img.getAttribute("data-thumbs");
        if (!dataThumbs) return;

        try {
            const thumbs = JSON.parse(dataThumbs);
            if (Array.isArray(thumbs) && thumbs.length > 0) {
                const randomThumb =
                    thumbs[Math.floor(Math.random() * thumbs.length)];

                if (randomThumb && randomThumb !== img.getAttribute("src")) {
                    img.src = randomThumb;
                }
            }
        } catch (e) {
            console.error("Failed to parse thumbs", e);
        }
    }

    function initObserver() {
        const observerOptions = {
            root: null,
            rootMargin: "50px",
            threshold: 0.1,
        };

        const prefersReducedMotion = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
        ).matches;

        if (prefersReducedMotion) {
            document.querySelectorAll(".observer-fade-in-up").forEach((el) => {
                el.classList.remove("opacity-0");
            });
            return;
        }

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    const target = entry.target as HTMLElement;
                    target.style.animationDelay = `${index * 100}ms`;
                    target.classList.remove("opacity-0");
                    target.classList.add("animate-fade-in-up");
                    observer.unobserve(target);
                }
            });
        }, observerOptions);

        document.querySelectorAll(".observer-fade-in-up").forEach((el) => {
            observer.observe(el);
        });
    }

    function initSpotlight() {
        const cards = document.querySelectorAll(".spotlight-card");
        cards.forEach((element) => {
            const card = element as HTMLElement;
            card.addEventListener("mousemove", (e: MouseEvent) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                card.style.setProperty("--x", `${x}px`);
                card.style.setProperty("--y", `${y}px`);
            });
        });
    }

    // Run on initial load
    initObserver();
    initRandomThumb();
    initSpotlight();

    // Run on view transitions (Astro)
    document.addEventListener("astro:after-swap", () => {
        initObserver();
        initRandomThumb();
        initSpotlight();
    });
</script>
