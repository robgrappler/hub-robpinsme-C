---
// src/pages/es/thanks.astro
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Gracias";
---

<BaseLayout title={title}>
    <div
        class="flex min-h-[80vh] flex-col items-center justify-center px-4 text-center sm:px-6 lg:px-8"
    >
        <div class="max-w-xl space-y-8 animate-fade-in-up">
            <!-- Icon/Graphic -->
            <div
                class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-main-gold/10 text-main-gold"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-8 w-8"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                </svg>
            </div>

            <h1
                class="font-bebas text-5xl font-black uppercase tracking-tight text-white sm:text-7xl"
            >
                GRACIAS<br />POR EL APOYO.
            </h1>

            <div class="space-y-2 font-sans text-lg text-sub-paper/90">
                <p>Un año más. Seguimos construyendo.</p>
            </div>

            <div class="pt-8">
                <a
                    href="/es/"
                    class="inline-block rounded-lg border border-white/10 bg-white/5 px-6 py-3 font-sans text-sm font-bold uppercase tracking-wider text-white transition-all hover:bg-white/10 hover:border-main-gold hover:text-main-gold"
                >
                    Volver al Inicio
                </a>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    @keyframes fade-in-up {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both;
    }
</style>
