---
// src/pages/support.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import LanguagePicker from "../components/LanguagePicker.astro";

const title = "Support the work";
const description = "Optional support for ongoing work and projects.";

const supportOptions = [
  {
    title: "Mercado Pago (MX)",
    note: "Fast, local, and familiar.",
    links: [
      { text: "MXN $100", href: "https://mpago.la/1W5621s" },
      { text: "MXN $250", href: "https://mpago.la/2XRWng7" },
      { text: "MXN $500", href: "https://mpago.la/1sacJ4T" },
    ],
    otherLink: {
      url: "https://link.mercadopago.com.mx/robgraplr",
      label: "Other amount",
    },
    border: "border-white/10",
    hoverBorder: "hover:border-main-gold",
    textAccent: "text-white group-hover:text-main-gold",
  },
  {
    title: "PayPal (Intl)",
    note: "For international support.",
    links: [
      { text: "$5 USD", href: "https://www.paypal.com/ncp/payment/RQG9F6ZWKG2G8" },
      { text: "$10 USD", href: "https://www.paypal.com/ncp/payment/3ATJDFHRZQPNY" },
      { text: "$25 USD", href: "https://www.paypal.com/ncp/payment/S6W7LBH2GQEHA" },
    ],
    otherLink: {
      url: "https://www.paypal.com/ncp/payment/PWTSTJSXV7CYY",
      label: "Other amount",
    },
    border: "border-white/10",
    hoverBorder: "hover:border-main-gold",
    textAccent: "text-white group-hover:text-main-gold",
  },
  {
    title: "Custom / Other",
    note: "Prefer another method? Reach out.",
    links: [
      {
        text: "Reach out",
        href: "mailto:rob@robgrappler.io?subject=Support%20inquiry&body=Hi%20%E2%80%94%0A%0AI%E2%80%99d%20like%20to%20ask%20about%20an%20alternative%20way%20to%20support.",
      },
    ],
    border: "border-main-gold/30",
    hoverBorder: "hover:border-main-gold",
    textAccent: "text-main-gold",
  },
];
---

<BaseLayout title={title} description={description} image="/images/support-card.png">
  <div class="mx-auto min-h-screen max-w-5xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="flex justify-end mb-4">
      <LanguagePicker currentLang="en" />
    </div>
    <!-- Header -->
    <header class="mb-16 text-center">
      <h1
        class="mb-4 font-bebas text-5xl font-bold tracking-[0.04em] text-white sm:text-7xl"
      >
        {title}
      </h1>
      <p class="mx-auto max-w-2xl font-sans text-lg text-sub-paper/80">
        <span class="mb-1 block text-sm font-medium opacity-60"
          >For those who’ve asked.</span
        >
        Contributions are voluntary and <span class="text-main-gold"
          >appreciated</span
        >.
      </p>
    </header>

    <!-- Options Grid -->
    <div class="grid gap-6 md:grid-cols-2">
      {
        supportOptions.map((opt, index) => (
          <article
            class={`group relative flex flex-col justify-between rounded-3xl border bg-white/5 backdrop-blur-sm p-8 shadow-xl transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl ${opt.border} ${opt.hoverBorder}`}
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Content -->
            <div class="mb-8">
              <h2
                class={`mb-2 font-bebas text-3xl tracking-wide text-white transition-colors ${opt.textAccent}`}
              >
                {opt.title}
              </h2>
              <p class="font-sans text-sm font-medium text-sub-grey">
                {opt.note}
              </p>
            </div>

            <!-- Links Group -->
            <div class="space-y-6">
              <!-- Tier Buttons -->
              <div class="flex flex-wrap gap-3">
                {opt.links.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="rounded-lg bg-[#F5C265] px-4 py-2 font-sans text-sm font-black uppercase tracking-widest text-[#0b0b0e] motion-safe:transition-all hover:bg-white hover:text-black hover:shadow-[0_0_20px_rgba(245,194,101,0.4)] motion-safe:hover:scale-105 group-focus-visible:ring-2 group-focus-visible:ring-main-gold/70 group-focus-visible:ring-offset-2 group-focus-visible:ring-offset-main-bg"
                  >
                    {link.text}
                  </a>
                ))}
              </div>

              <!-- Secondary "Other Amount" Option -->
              {opt.otherLink && (
                <div class="pt-2">
                  <p class="mb-1 font-sans text-xs font-medium text-sub-grey/50">
                    Prefer a different amount? That’s fine too.
                  </p>
                  <a
                    href={opt.otherLink.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-block font-sans text-xs font-bold text-sub-paper/60 transition-colors hover:text-main-gold"
                  >
                    {opt.otherLink.label} &rarr;
                  </a>
                </div>
              )}
            </div>

            <!-- Background Glow -->
            <div
              class="pointer-events-none absolute -inset-px opacity-0 transition-opacity duration-500 group-hover:opacity-100"
              style="background: radial-gradient(600px circle at 50% 50%, rgba(255, 255, 255, 0.03), transparent 40%);"
            />
          </article>
        ))
      }
    </div>

    <!-- Outro -->
    <footer class="mt-20 text-center opacity-60">
      <p
        class="font-sans text-sm font-bold uppercase tracking-widest text-sub-grey/50"
      >
        No expectations. No pressure. Just appreciation.
      </p>
    </footer>
  </div>
</BaseLayout>
